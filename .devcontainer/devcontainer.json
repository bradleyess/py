{
    "name": "Python Starter Template",
    "remoteUser": "vscode",
    "build": {
        "context": "..",
        "dockerfile": "../dev.Dockerfile"
    },
    "features": {},

    "customizations": {
        "vscode": {
            "extensions": [
                "GitHub.copilot", // AI Code Completion

                "ms-python.black-formatter", // Python Code Formatting
                "ms-python.python", // Python
                "charliermarsh.ruff", // Python Linting

                "esbenp.prettier-vscode", // Code Formatting for JS, JSON, CSS, YAML.
                "tamasfe.even-better-toml", // TOML Linting
                "dorzey.vscode-sqlfluff", // SQL Linting
                "exiasr.hadolint", // Docker Linting
                "DavidAnson.vscode-markdownlint" // Markdown Linting
            ]
        }
    }
}
